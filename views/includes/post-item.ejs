<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author_name %></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <!-- <button class="btn btn-alt" href="/post/delete/id=<%= post.id %>" >Delete Post</button> -->
    <a href="/post/delete/id=<%= post.id %>">Delete Post</a>
    <a href="/edit/<%= post.id %>">Edit Post</a>
    <a class="btn" href="/view/<%= post.id %>">View Post</a>
  </div>
</article>

